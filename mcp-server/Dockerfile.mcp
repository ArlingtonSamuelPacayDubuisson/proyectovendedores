# Dockerfile para MCP Server
FROM node:18-alpine

WORKDIR /app

# Instalar dependencias del sistema necesarias
RUN apk add --no-cache \
    curl \
    git

# Copiar archivos de dependencias del MCP Server
COPY mcp-server/package*.json ./mcp-server/

# Instalar dependencias del MCP Server
WORKDIR /app/mcp-server
RUN npm install

# Volver al directorio ra√≠z y copiar todo
WORKDIR /app
COPY mcp-server ./mcp-server

# Exponer puerto para el servidor MCP
EXPOSE 3002

# Comando para iniciar el servidor MCP
WORKDIR /app/mcp-server
CMD ["node", "src/index.js"]
